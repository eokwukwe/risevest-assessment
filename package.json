{
  "name": "risevest-backend-assessment",
  "version": "1.0.0",
  "description": "Risevest Backend Assessment",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/index.ts",
    "build": "tsc -p .",
    "start": "node build/src/index.js",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev --name init",
    "db:seed": "npx prisma db seed",
    "migrate": "npx prisma migrate deploy",
    "generate:sql": "npx prisma generate --sql",
    "pretest": "npm run db:migrate:test",
    "test": "cross-env NODE_ENV=test dotenv -e .env.test -- node -r ts-node/register bin/test.ts",
    "db:migrate:test": "cross-env NODE_ENV=test dotenv -e .env.test -- npx prisma migrate dev --name init"
  },
  "author": "Okwukwe Ewurum",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.12",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "envalid": "^8.0.0",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.0",
    "prisma": "^5.20.0",
    "prisma-extension-pagination": "^0.7.4",
    "redis": "^4.7.0",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.3",
    "@japa/api-client": "^1.4.4",
    "@japa/expect": "^2.0.2",
    "@japa/run-failed-tests": "^1.1.1",
    "@japa/runner": "^2.5.1",
    "@japa/spec-reporter": "^1.3.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/config": "^3.3.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.5",
    "morgan": "^1.10.0",
    "ts-node": "10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
